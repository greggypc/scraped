</nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1>Your Saved Articles</h1>
        <p>Add notes to your saved article or delete them.</p>
      </div>
    </div>

  {{#each headline}}
    <div class="headline-container">
      <div class="row">
        <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{this.title}}</h3>
          <button type="button" class="btn btn-danger btn-article-delete">Delete From Saved</button>
          <button type="button" class="btn btn-primary btn-lg note-modal" data-toggle="modal" data-target="#notesModal">
            Article Notes
          </button>
        </div>
        <div class="panel-body">
          {{this.summary}}
        </div>
      </div>
      </div>
    </div>
  {{/each}}


  <!-- Modal -->
<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Notes for Article: {{this.id}}</h4>
      </div>

      <div class="modal-body">
        {{#if notes}}
         <ul>
           {{#each note}}
            <li class="list-group-item">{{this.note}}</li>
           {{/each}} 
          </ul>
        {{else}}
            <ul><li class="list-group-item">No added notes for this article.</li></ul>
        <textarea placeholder="New Note" rows="4" cols="60"></textarea>
        {{/if}}
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-save-note">Save Note</button>
      </div>
    </div>
  </div>
</div>

